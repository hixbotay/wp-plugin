<?xml version="1.0" encoding="utf-8"?>
<config>
  	  <fieldset name="basic">
  	  <field name="enabled" type="radio" default="1" label="Enable" description="Enable Paypal">
  	  	<option value="1">Yes</option>
		<option value="0">No</option>
  	  </field>
  	  <field name="display_name" type="text" required="required" default="" label="Display Name" description="Name appears at payment page of frontend"/>
		 <field name="user_role" type="user_role" default="publish" label="Access permission"  description="Group of user can see the gateway"/>
		 
	  
	  
		<field name="api_username" type="text" size="50" default="" label="username" />
        <field name="api_password" type="text" default="" label="password" />
        <field name="api_signature" type="text" default="" label="Signature" />
        <field name="sandbox" type="radio" default="0" label="Sandbox" class="btn-group">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
				
		</fieldset>
</config>