        </field>
		
		
		<field name="test_merchant_id" type="text" size="50" default="ONEPAY" label="TEST Merchant ID" />
		<field name="test_access_code" type="text" size="50" default="D67342C2" label="TEST Access Code" />
		<field name="test_merchant_key" type="text" size="50" default="A3EFDFABA8653DF2342E8DAC29B51AF0" label="TEST Hashcode" />
				
