<?xml version="1.0" encoding="utf-8"?>
<config>
  	  <fieldset name="basic">
  	  <field name="enabled" type="radio" default="1" label="Enable" description="Enable Pay by Cash">
  	  	<option value="1">Yes</option>
		<option value="0">No</option>
  	  </field>
  	  <field name="display_name" type="text" required="required" default="" label="Display Name" description="Name appears at payment page of frontend"/>
		 <field name="user_role" type="user_role" default="publish" label="Access permission"  description="Group of user can see the gateway"/>
		 <field name="display_name" type="text" size="30" default="" label="Display name"/>
	  <field name="gateway" type="text" required="true" size="30" default="" description="Name display in Onepay page" label="Gateway name"/>
	  
		<field name="merchant_id" type="text" size="50" default="" label="Merchant ID" />
		<field name="access_code" type="text" size="50" default="" label="Access Code" />
		<field name="merchant_key" type="text" size="50" default="" label="Hashcode" />
